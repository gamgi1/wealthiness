    <%= f.label :opportunity, "Yes", :value => "true" %>
    <%= f.radio_button :opportunity, true %>
    <%= f.label :opportunity, "No", :value => "false" %>
    <%= f.radio_button :opportunity, false %>
  </div>
  <div class='form-group'>
    <p>Do you believe bad habits create detrimental luck?</p>
    <%= f.label :detriment, "Yes", :value => "true" %>
    <%= f.radio_button :detriment, true %>
    <%= f.label :detriment, "No", :value => "false" %>
    <%= f.radio_button :detriment, false %>
  </div>
  <div class='form-group'>
    <p>Do you believe in lifelong educational self-improvement?</p>
    <%= f.label :self_improve, "Yes", :value => "true" %>
    <%= f.radio_button :self_improve, true %>
    <%= f.label :self_improve, "No", :value => "false" %>
