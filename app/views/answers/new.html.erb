  </div>
  <div class='form-group'>
    <p>Do you love to read?</p>
    <%= f.label :love_to_read, "Yes", :value => "true" %>
    <%= f.radio_button :love_to_read, true %>
    <%= f.label :love_to_read, "No", :value => "false" %>
    <%= f.radio_button :love_to_read, false %>
  </div>
  <div class="form-group">
    <%= f.submit('Calculate Likelihood of Being Wealthy', class: 'btn btn-lg btn-success') %>
  </div>
<% end %>
